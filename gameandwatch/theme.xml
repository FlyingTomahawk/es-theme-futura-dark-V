<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system">
        <image name="logo">
            <path>./system2.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>Game & Watch is a line of handheld electronic games produced by Nintendo from 1980 to 1991. Created by game designer Gunpei Yokoi, each Game & Watch features a single game to be played on an LCD screen in addition to a clock, an alarm, or both.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image> 
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">	
		<image name="logo">
			<path>./system.svg</path>		
		    <pos>0.5 0.105</pos>
			<maxSize>0.30 0.20</maxSize>
		</image>
		<text name="system_name" extra="true">
			<text>Game and Watch</text>
			<pos>0.025 0.06</pos>	
			<size>0.25 0</size>						
		</text>					
		<text name="system_year" extra="true">
			<text>1980 - 1991</text>
		</text>	
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<path>./system.svg</path>		
			<pos>0.11 0.06</pos>			
		</image>		
		<text name="system_name_year" extra="true">
			<text>Game and Watch 1980 - 1991</text>
			<pos>0.55 0.055</pos>
			<fontSize>0.04</fontSize>			
		</text>				
	</view>		

</theme>